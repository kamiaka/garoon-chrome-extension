{
  "manifest_version": 3,
  "name": "__MSG_ext_name__",
  "version": "1.2.0",

  "author": "Shinya Kamiaka",

  "description": "__MSG_ext_description__",
  "icons": {
    "128": "icon/ga.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "default_locale": "en",
  "permissions": ["alarms", "notifications", "storage"],
  "host_permissions": ["https://*/"],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
